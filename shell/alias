# ------------------------------------
# General
# ------------------------------------
alias mv='mv -i'
alias cp='cp -i'
alias rm='rm -i'
alias df='df -h'
alias du='du -h'
alias lv8='lv -Ou8'
alias ag='ag --ignore-dir vendor'
alias ll='ls -la --color=auto'
alias grep='grep --color'

# ------------------------------------
# Git
# ------------------------------------
alias gs='git status'
alias au='git add -u; git status'
alias o='git open'
alias gd='git develop'
alias gm='git master'
alias gp='git push'

alias tt='tig'
alias gist='gist -p'

# ------------------------------------
# Own definition
# ------------------------------------
alias sss='source ~/.zshrc'

# ------------------------------------
# Ruby
# ------------------------------------
alias bi='bundle install --path vendor/bundle'
alias bin='bundle install --path vendor/bundle --binstubs .bundle/bin'

# ------------------------------------
# Tmux
# ------------------------------------
alias tmux='tmux -2 -f ~/.tmux.conf'
alias tmux-copy='tmux save-buffer - | pbcopy'
alias tmux-paste='pbpaste | tmux load-buffer - && tmux paste-buffer'

# ------------------------------------
# Vagrant
# ------------------------------------
alias vs='vagrant global-status'

# ------------------------------------
# CF
# ------------------------------------
alias cf='LANG=en_US cf'
alias bd='bosh-deploy.sh'

# ------------------------------------
# Vim
# ------------------------------------
alias vim='nvim'
alias lvim='nvim -u ~/.dotfiles/llvm/vim/vimrc'
