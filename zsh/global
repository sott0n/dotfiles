#export PATH=$GOPATH/src/github.com/uber/go-torch/FlameGraph:$PATH

# ------------------------------------
# Python
# ------------------------------------
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
fi

# ------------------------------------
# Rust
# ------------------------------------
export PATH="$HOME/.cargo/bin:$PATH"

