# ====================================
# PATH
# ====================================

# ------------------------------------
# General
# ------------------------------------
export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin
export PATH=$PATH:$HOME/bin

# ====================================
# ENVIRONMENT
# ====================================
export GPG_TTY=$(tty)

# ------------------------------------
# LANGUAGE
# ------------------------------------
export LANG=ja_JP.UTF-8
export LANG=en_US.UTF-8

# ------------------------------------
# EDITOR and Terminal
# ------------------------------------
export EDITOR='vim'
export ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE=fg=8,bold

# ====================================
# Language
# ====================================

# ------------------------------------
# Ruby
# ------------------------------------
if [ -d ~/.rbenv ]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init - zsh)"
fi

# ------------------------------------
# Go
# ------------------------------------
export GOVERSION=$(cat ${HOME}/.go/.goversion)
export GOROOT=${HOME}/.go/${GOVERSION}
export GOPATH=${HOME}
export PATH=${GOROOT}/bin:${GOPATH}/bin:${PATH}
export PATH=$GOPATH/src/github.com/uber/go-torch/FlameGraph:$PATH

# ------------------------------------
# Python
# ------------------------------------
export PYENV_ROOT=~/.pyenv
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

# ------------------------------------
# PHP
# ------------------------------------
# export PATH="$HOME/.phpenv/bin:$PATH"
# eval "$(phpenv init -)"

# ------------------------------------
# node.js
# ------------------------------------
# if [[ -f ~/.nodebrew/nodebrew ]]; then
#      export PATH=$HOME/.nodebrew/current/bin:$PATH
#      nodebrew use stable
# fi

# ------------------------------------
# OCaml
# ------------------------------------
export CPLUS_INCLUDE_PATH=$CPLUS_INCLUDE_PATH:/Users/sott0n/include/
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"

# ------------------------------------
# peco
# ------------------------------------
for f (~/.dotfiles/peco/*.zsh) source "${f}"
bindkey '^r' peco-select-history
bindkey '^j' peco-ghq
bindkey '^b' peco-git-branch-checkout
bindkey '^x' peco-kubectx

# ------------------------------------
# llvm
# ------------------------------------
export PATH="/usr/local/opt/llvm/bin:$PATH"
export LDFLAGS="-L/usr/local/opt/llvm/lib"
export CPPFLAGS="-I/usr/local/opt/llvm/include"

# For macos
export SDKROOT=/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX10.15.sdk
export C_INCLUDE_PATH=/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX10.15.sdk/usr/include
export MACOSX_DEPLOYMENT_TARGET=10.15
