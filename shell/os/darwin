# ====================================
# General
# ====================================
export PATH=/opt/homebrew/bin:$PATH

# ====================================
# Alias
# ====================================
# show with hidden files
alias ls="ls --color"
alias la="ls -A --color"

# ====================================
# Rmtrash
# ====================================
alias rm='trash -F'
alias rr='trash -F *~'

